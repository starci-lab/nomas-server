{
    "version": "0.2.0",
    "configurations": [
        {
            "type": "node",
            "request": "launch",
            "name": "Run nomas-colyseus",
            "cwd": "${workspaceFolder}",
            "runtimeExecutable": "node",
            "runtimeArgs": ["--nolazy", "-r", "ts-node/register", "-r", "tsconfig-paths/register"],
            "args": ["${workspaceFolder}/apps/nomas-colyseus/src/app.ts"],
            "skipFiles": ["<node_internals>/**"],
            "console": "integratedTerminal",
            "envFile": "${workspaceFolder}/.env.local",
            "outFiles": ["${workspaceFolder}/dist/apps/nomas-colyseus/**/*.js"],
            "sourceMaps": true,
            "autoAttachChildProcesses": true
        }
    ]
}
